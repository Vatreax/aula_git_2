lista1 = []
lista2 = []

contador = 1
while contador < 10:
    try:
        n1 = int(input(f"Digite o {contador}°número: "))
        contador += 1         
        lista1.append(n1)
        if n1 % 2 == 0:
            lista2.append(n1)
    except ValueError:
        print("\nDigite um Número Inteiro\n")

print(f"{lista1}\n{lista2}\n{sum(lista2)}")